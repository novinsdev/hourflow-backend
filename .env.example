# .env.example
NODE_ENV=development
PORT=4000
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# JWT secret for your app-issued tokens
JWT_SECRET=change_this_to_a_long_random_string

# Option A: embed service account as JSON (recommended on PaaS)
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"firebase-adminsdk-...@....iam.gserviceaccount.com", ... }

# Option B: use a file path instead (for local dev)
# GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/firebase-service-account.json

# CORS allowlist for your mobile dev builds (add later if needed)
ALLOWED_ORIGINS=http://localhost:19006,exp://127.0.0.1:19000
